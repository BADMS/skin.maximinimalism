<window id="56">
	<defaultcontrol always="true">200</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>

		<!--background-->
		<include>fanartSlides</include>
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<include>dimensionsFullscreen</include>
			<texture>colors/black.png</texture>
			<colordiffuse>ccffffff</colordiffuse>
			<aspectratio>stretch</aspectratio>
		</control>

		<control type="group">
			
			<posx>col-7-begin</posx>
			<posy>row-4-begin</posy>
			
			<!--animations-->
			<include>modalDialogInOut</include>
			
			<control type="label">
				<posx>0</posx>
				<posy>0</posy>
				<width>8-col</width>
				<font>pageTitle</font>
				<label>[COLOR accented]Settings[/COLOR] Misc settings</label>
				<textcolor>white</textcolor>
			</control>
			
			<!--horizontal rule-->
			<control type="image">
				<posx>0</posx>
				<posy>1-row</posy>
				<width>12-col</width>
				<height>3</height>
				<texture>colors/white.png</texture>
				<colordiffuse>ffffffff</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>			
			
			<!--options-->
			<control type="grouplist" id="200">
				<posx>0</posx>
				<posy>2-row</posy>
				<width>12-col</width>
				<height>10-row</height>
				<orientation>vertical</orientation>
				<itemgap>0</itemgap>
				
				<control type="button" id="302">
					<description>Default Button</description>
					<width>12-col</width>
					<align>left</align>
					<label>Set Subtitles Script</label>
					<label2>$INFO[Skin.String(SubtitlesPath)]</label2>
					<font>itemTitle</font>
					<textcolor>unselected</textcolor>
					<focusedcolor>white</focusedcolor>
					<onclick>Skin.SetAddon(SubtitlesPath,xbmc.python.subtitles)</onclick>
				</control>
				
				<control type="button" id="1">
					<width>12-col</width>
					<align>left</align>
					<label>Set Movie Fanart location</label>
					<label2>$INFO[Skin.String(videoFanartLocation)]</label2>
					<font>itemTitle</font>
					<textcolor>unselected</textcolor>
					<focusedcolor>white</focusedcolor>
					<onclick>Skin.SetPath(videoFanartLocation)</onclick>
				</control>
				
				<control type="button" id="2">
					<width>12-col</width>
					<align>left</align>
					<label>Set TV Show Fanart location</label>
					<label2>$INFO[Skin.String(tvshowFanartLocation)]</label2>
					<font>itemTitle</font>
					<textcolor>unselected</textcolor>
					<focusedcolor>white</focusedcolor>
					<onclick>Skin.SetPath(tvshowFanartLocation)</onclick>
				</control>
				
				<control type="button" id="3">
					<width>12-col</width>
					<align>left</align>
					<label>Set Music Fanart location</label>
					<label2>$INFO[Skin.String(musicFanartLocation)]</label2>
					<font>itemTitle</font>
					<textcolor>unselected</textcolor>
					<focusedcolor>white</focusedcolor>
					<onclick>Skin.SetPath(musicFanartLocation)</onclick>
				</control>
				
				<control type="button" id="4">
					<width>12-col</width>
					<align>left</align>
					<label>Set Game Fanart location</label>
					<label2>$INFO[Skin.String(gameFanartLocation)]</label2>
					<font>itemTitle</font>
					<textcolor>unselected</textcolor>
					<focusedcolor>white</focusedcolor>
					<onclick>Skin.SetPath(gameFanartLocation)</onclick>
				</control>
				
				<control type="radiobutton" id="501">
					<description>Enable Debug Grid</description>
					<width>12-col</width>
					<align>left</align>
					<label>31034</label>
					<onclick>Skin.ToggleSetting(DebugGrid)</onclick>
					<onclick>XBMC.ReloadSkin()</onclick>
					<selected>Skin.HasSetting(DebugGrid)</selected>
				</control>

				<control type="radiobutton" id="502">
					<description>Disable Debug Info</description>
					<width>12-col</width>
					<align>left</align>
					<label>31035</label>
					<onclick>Skin.ToggleSetting(HideDebugInfo)</onclick>
					<selected>Skin.HasSetting(HideDebugInfo)</selected>
				</control>	
			</control>

		</control>
		
		<!--debugging-->
		<include>Debug_Grid</include>
		<control type="label">
			<include>DialogID</include>
			<label>CustomSettings.xml</label>
		</control>

	</controls>

</window>