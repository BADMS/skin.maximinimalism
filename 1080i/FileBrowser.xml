<window id="126">
	<defaultcontrol always="true">450</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<include>fadeInOut</include>

	<controls>
									
		<!--background-->
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<include>dimensionsFullscreen</include>
			<texture>colors/black.png</texture>
			<colordiffuse>ffffffff</colordiffuse>
			<aspectratio>stretch</aspectratio>
		</control>
				
		<!--file list-->
		<control type="group">
		
			<posx>col-5-begin</posx>
			<posy>row-1-begin</posy>
			
			<!--animations-->
			<include>modalDialogInOut</include>
				
			<control type="label">
				<posx>0</posx>
				<posy>3-row</posy>
				<width>8-col</width>
				<font>pageTitle</font>
				<textcolor>white</textcolor>
				<label>File Browser</label>
			</control>
			
			<!--horizontal rule-->
			<control type="image">
				<posx>0</posx>
				<posy>4-row</posy>
				<width>16-col</width>
				<height>3</height>
				<texture>colors/white.png</texture>
				<colordiffuse>ffffffff</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>
		
			<control type="list" id="450">
				<posx>0</posx>
				<posy>5-row</posy>
				<width>8-col</width>
				<height>8-row</height>
				<onright>9000</onright>

				<itemlayout height="1-row" width="8-col">

					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>48</width>
						<height>48</height>						
						<aspectratio scalediffuse="false">scale</aspectratio>
						<texture fallback="colors/offblack.png" diffuse="masks/circle.png" border="0">$INFO[Listitem.icon]</texture>
					</control>

					<control type="label">
						<posx>60</posx>
						<posy>-6</posy>
						<width>8-col-gutter</width>
						<info>ListItem.Label</info>
						<font>itemTitle</font>
						<textcolor>unselected</textcolor>
					</control>

				</itemlayout>

				<focusedlayout height="1-row" width="8-col">

					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>48</width>
						<height>48</height>						
						<aspectratio scalediffuse="false">scale</aspectratio>
						<texture fallback="colors/offblack.png" diffuse="masks/circle.png" border="0">$INFO[Listitem.icon]</texture>
						<!--animation-->
						<include>listItemFocus</include>
					</control>

					<control type="label">
						<posx>60</posx>
						<posy>-6</posy>
						<width>8-col-gutter</width>
						<info>ListItem.Label</info>
						<font>itemTitle</font>
						<textcolor>selected</textcolor>
					</control>

				</focusedlayout>

			</control>
		
			<!--larger thumbnail-->	
			<control type="image">
				<posx>8-col</posx>
				<posy>5-row</posy>
				<width>4-col</width>
				<height>6-col</height>
				<aspectratio align="left" aligny="top">keep</aspectratio>			
				<texture>$INFO[Listitem.icon]</texture>
				<fadetime>400</fadetime>
			</control>
			
			<!--controls-->
			<control type="grouplist" id="9000">
				<posx>13-col</posx>
				<posy>5-row</posy>
				<width>24-col</width>
				<height>4-row</height>
				<itemgap>0</itemgap>
				<onleft>450</onleft>
				<orientation>vertical</orientation>
				
				<control type="button" id="413">
					<description>OK</description>
					<label>OK</label>
					<width>3-col</width>
					<height>37</height>
					<font>menuTitle</font>
					<align>left</align>
					<focusedcolor>white</focusedcolor>
					<textcolor>unselected</textcolor>
				</control>
								
				<control type="button" id="415">
					<visible>Control.IsEnabled(415)</visible>
					<description>New folder</description>
					<label>New Folder</label>
					<width>3-col</width>
					<height>37</height>
					<font>menuTitle</font>
					<align>left</align>
					<focusedcolor>white</focusedcolor>
					<textcolor>unselected</textcolor>
				</control>
											
			</control>

		</control>
		
		<!--debugging-->
		<include>Debug_Grid</include>
		<control type="label">
			<include>DialogID</include>
			<label>FileBrowser.xml</label>
		</control>

	</controls>

</window>