<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">8001</defaultcontrol>
    <controls>
        <!--player controls-->
		<control type="panel" id="8001">
            <posx>370</posx>
            <posy>926</posy>
            <width>24-col</width>
            <height>1-col</height>
            <itemgap>0</itemgap>
            <orientation>horizontal</orientation>
			<onright>8002</onright>
            <itemlayout width="1-col" height="1-col">
				<control type="label">
                    <posx>26</posx>
                    <posy>0</posy>
                    <width>1-col</width>
                    <height>1-col</height>
                    <font>symbol</font>
                    <textcolor>black</textcolor>
                    <shadowcolor>-</shadowcolor>
                    <label>$INFO[ListItem.label]</label>
                </control>
            </itemlayout>
            <focusedlayout width="1-col" height="1-col">
                <control type="image">
                    <posx>18</posx>
                    <posy>18</posy>
                    <width>36</width>
                    <height>36</height>
                    <aspectratio scalediffuse="false">scale</aspectratio>
                    <texture>colors/black.png</texture>
                    <bordersize>0</bordersize>
                    <colordiffuse>ffFFFFFF</colordiffuse>
                </control>
				<control type="label">
                    <posx>26</posx>
                    <posy>0</posy>
                    <width>1-col</width>
                    <height>1-col</height>
                    <font>symbol</font>
                    <textcolor>selected</textcolor>
                    <shadowcolor>-</shadowcolor>
                    <label>$INFO[ListItem.label]</label>
                </control>
            </focusedlayout>
            <content>
                <item id="1">
		            <description>Previous</description>
                    <label></label>
                    <thumb>-</thumb>
                    <onclick>PlayerControl(previous)</onclick>
                </item>
                <item id="2">
					<description>Rewind</description>
                    <label></label>
                    <thumb>-</thumb>
                    <onclick>PlayerControl(rewind)</onclick>
                </item>
                <item id="3">
					<description>Stop</description>
                    <label></label>
                    <thumb>-</thumb>
                    <onclick>PlayerControl(stop)</onclick>
                </item>
                <item id="4">
					<visible>Player.Playing</visible>
					<description>Play/Pause</description>
                    <label></label>
                    <thumb>-</thumb>
                    <onclick>PlayerControl(play)</onclick>
                </item>
				<item id="5">
					<visible>Player.Paused</visible>
					<description>Pause</description>
                    <label></label>
                    <thumb>-</thumb>
                    <onclick>PlayerControl(play)</onclick>
                </item>
                <item id="6">
					<description>Fast forward</description>
                    <label></label>
                    <thumb>-</thumb>
                    <onclick>PlayerControl(forward)</onclick>
                </item>
				<item id="7">
					<description>Next Track</description>
                    <label></label>
                    <thumb>-</thumb>
                    <onclick>PlayerControl(next)</onclick>
                </item>
				<item id="8">
					<description>Repeat</description>
                    <label></label>
                    <thumb>-</thumb>
                    <onclick>PlayerControl(Repeat)</onclick>
					<onclick condition="Playlist.IsRepeat">Notification($LOCALIZE[31132],$LOCALIZE[597])</onclick>
					<onclick condition="Playlist.IsRepeatOne">Notification($LOCALIZE[31132],$LOCALIZE[596])</onclick>
					<onclick condition="!Playlist.IsRepeat + !Playlist.IsRepeatOne">Notification($LOCALIZE[31132],$LOCALIZE[595])</onclick>
                </item>
				<item id="9">
					<description>Shuffle</description>
                    <label></label>
                    <thumb>-</thumb>
                    <onclick>PlayerControl(Random)</onclick>
					<onclick>Notification($LOCALIZE[31132],$LOCALIZE[31133])</onclick>
                </item>
            </content>
        </control>

		<!--visualisation options etc-->
		<control type="panel" id="8002">
            <posx>1406</posx>
            <posy>934</posy>
            <width>24-col</width>
            <height>1-col</height>
            <itemgap>0</itemgap>
            <orientation>horizontal</orientation>
			<onleft>8001</onleft>
            <itemlayout width="184" height="43">

				<control type="label">
					<posx>55</posx>
					<posy>0</posy>
					<width>184</width>
					<align>left</align>
					<font>menuTitle</font>
					<textcolor>black</textcolor>
					<label>$INFO[ListItem.label]</label>
					<shadowcolor>-</shadowcolor>
				</control>

			</itemlayout>

			<focusedlayout width="184" height="43">

				<control type="label">
					<posx>42</posx>
					<posy>0</posy>
					<width>184</width>
					<align>left</align>
					<font>menuTitle</font>
					<textcolor>black</textcolor>
					<label>[ $INFO[ListItem.label] ]</label>
					<shadowcolor>-</shadowcolor>
				</control>

			</focusedlayout>
            <content>
                <item id="1">
		            <description>Playlist</description>
                    <label>31097</label>
                    <thumb>-</thumb>
                    <onclick>activateWindow(musicplaylist)</onclick>
                </item>
                <item id="2">
					<description>Visualisation</description>
                    <label>24010</label>
                    <thumb>-</thumb>
                    <onclick>SendClick(500)</onclick>
                </item>
            </content>
        </control>
		<control type="group">
            <visible>false</visible>
            <control type="button" id="500">
                <description>Visualization selection</description>
            </control>
        </control>
    </controls>
</window>
