<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">8001</defaultcontrol>
    <controls>
        <!--player controls-->
		<control type="panel" id="8001">
            <posx>370</posx>
            <posy>926</posy>
            <width>24-col</width>
            <height>1-col</height>
            <itemgap>0</itemgap>
            <orientation>horizontal</orientation>
            <itemlayout width="1-col" height="1-col">
				<control type="label">
                    <posx>26</posx>
                    <posy>0</posy>
                    <width>1-col</width>
                    <height>1-col</height>
                    <font>symbol</font>
                    <textcolor>black</textcolor>
                    <shadowcolor>-</shadowcolor>
                    <label>$INFO[ListItem.label]</label>
                </control>
            </itemlayout>
            <focusedlayout width="1-col" height="1-col">
                <control type="image">
                    <posx>18</posx>
                    <posy>18</posy>
                    <width>36</width>
                    <height>36</height>
                    <aspectratio scalediffuse="false">scale</aspectratio>
                    <texture>colors/black.png</texture>
                    <bordersize>0</bordersize>
                    <colordiffuse>ffFFFFFF</colordiffuse>
                </control>
				<control type="label">
                    <posx>26</posx>
                    <posy>0</posy>
                    <width>1-col</width>
                    <height>1-col</height>
                    <font>symbol</font>
                    <textcolor>selected</textcolor>
                    <shadowcolor>-</shadowcolor>
                    <label>$INFO[ListItem.label]</label>
                </control>
            </focusedlayout>
            <content>
                <item id="1">
		            <description>Previous</description>
                    <label></label>
                    <thumb>-</thumb>
                    <onclick>PlayerControl(previous)</onclick>
                </item>
                <item id="2">
					<description>Rewind</description>
                    <label></label>
                    <thumb>-</thumb>
                    <onclick>PlayerControl(rewind)</onclick>
                </item>
                <item id="3">
					<description>Stop</description>
                    <label></label>
                    <thumb>-</thumb>
                    <onclick>PlayerControl(stop)</onclick>
                </item>
                <item id="4">
					<description>Play/Pause</description>
                    <label></label>
                    <thumb>-</thumb>
                    <onclick>PlayerControl(play)</onclick>
                </item>
                <item id="5">
					<description>Fast forward</description>
                    <label></label>
                    <thumb>-</thumb>
                    <onclick>PlayerControl(forward)</onclick>
                </item>
				<item id="6">
					<description>Next Track</description>
                    <label></label>
                    <thumb>-</thumb>
                    <onclick>PlayerControl(next)</onclick>
                </item>
				<item id="7">
					<description>Repeat</description>
                    <label></label>
                    <thumb>-</thumb>
                    <onclick>PlayerControl(Repeat)</onclick>
                </item>
				<item id="8">
					<description>Shuffle</description>
                    <label></label>
                    <thumb>-</thumb>
                    <onclick>PlayerControl(Random)</onclick>
					<onclick>Notification($LOCALIZE[31132],$LOCALIZE[31133])</onclick>
                </item>
            </content>
        </control>
    </controls>
</window>
