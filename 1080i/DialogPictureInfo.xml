<window id="139">
	<defaultcontrol always="true">5</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>

		<include>modalDialog</include>

		<control type="group">
			<posx>col-1-begin</posx>
			<posy>row-3-begin</posy>
			
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>12-col-gutter</width>
				<height>11-row</height>
				<texture>$INFO[listitem.thumb]</texture>
			</control>
			

			<control type="list" id="5">
				<posx>12-col</posx>
				<posy>0</posy>
				<width>12-col</width>
				<height>17-row</height>
			
				<itemlayout height="36">

					<control type="label">
						<posx>0</posx>
						<width>4-col-gutter</width>
						<info>ListItem.Label</info>
						<font>regularSemibold</font>
					</control>

					<control type="label">
						<posx>4-col</posx>
						<width>8-col</width>
						<align>left</align>
						<info>ListItem.Label2</info>
						<font>regular</font>
					</control>

				</itemlayout>

				<focusedlayout height="36">

					<control type="label">
						<posx>0</posx>
						<width>4-col-gutter</width>
						<info>ListItem.Label</info>
						<font>regularSemibold</font>
					</control>

					<control type="label">
						<posx>4-col</posx>
						<width>8-col</width>
						<align>left</align>
						<info>ListItem.Label2</info>
						<font>regular</font>
					</control>

				</focusedlayout>

			</control>

		</control>

		<!--debugging-->
		<include>Debug_Grid</include>
		<control type="label">
			<include>DialogID</include>
			<label>DialogPictureInfo.xml</label>
		</control>

	</controls>

</window>