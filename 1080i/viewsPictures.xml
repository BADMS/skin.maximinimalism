<includes>

	<!--Album selections-->	
	<include name="viewPictureAlbumList">
				
		<control type="panel" id="51">
			<visible>Container.HasFolders</visible>
			<posx>0</posx>
			<posy>0</posy>
			<width>20-col</width>
			<height>11-row</height>
			<onleft>9000</onleft>
			<onright>60</onright>
			<ondown>51</ondown>
			<onup>51</onup>
			<pagecontrol>60</pagecontrol>					

			<itemlayout height="1-row" width="10-col">
			
				<control type="image">
					<posx>1</posx>
					<posy>4</posy>
					<width>50</width>
					<height>50</height>						
					<aspectratio>scale</aspectratio>
					<texture fallback="colors/offblack.png" border="0">$INFO[Listitem.icon]</texture>
				</control>
				
				<control type="label">
					<posx>60</posx>
					<posy>0</posy>
					<width>7-col-gutter</width>
					<info>ListItem.Label</info>
					<font>itemTitle</font>
					<textcolor>white</textcolor>
					<shadowcolor>-</shadowcolor>
				</control>
							
			</itemlayout>

			<focusedlayout height="1-row" width="10-col">

				<control type="image">
					<posx>0</posx>
					<posy>2</posy>
					<width>10-col-gutter</width>
					<height>53</height>
					<aspectratio>stretch</aspectratio>
					<texture>colors/white.png</texture>
				</control>
				
				<control type="image">
					<posx>1</posx>
					<posy>4</posy>
					<width>50</width>
					<height>50</height>						
					<aspectratio>scale</aspectratio>
					<texture fallback="colors/offblack.png" border="0">$INFO[Listitem.icon]</texture>
				</control>

				<control type="label">
					<posx>60</posx>
					<posy>0</posy>
					<width>7-col-gutter</width>
					<info>ListItem.Label</info>
					<font>itemTitle</font>
					<textcolor>black</textcolor>
					<selectedcolor>black</selectedcolor>
					<shadowcolor>-</shadowcolor>
				</control>
								
			</focusedlayout>
		</control>

	</include>
	
	<!--Album-->	
	<include name="viewPicturePhoto">
				
		<control type="panel" id="52">
			<visible>!Container.HasFolders</visible>
			<posx>-6</posx>
			<posy>0</posy>
			<width>20-col</width>
			<height>12-row</height>
			<onleft>9000</onleft>
			<onright>60</onright>
			<ondown>51</ondown>
			<onup>51</onup>
			<pagecontrol>60</pagecontrol>					

			<itemlayout height="5-col" width="5-col">
			
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>5-col-gutter</width>
					<height>5-col-gutter</height>						
					<aspectratio>scale</aspectratio>
					<texture border="6">$INFO[Listitem.icon]</texture>
					<bordersize>6</bordersize>
				</control>
				
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>5-col-gutter</width>
					<height>5-col-gutter</height>
					<texture>backgrounds/vignette.png</texture>
					<colordiffuse>ffffffff</colordiffuse>
					<aspectratio>stretch</aspectratio>
				</control>
							
			</itemlayout>

			<focusedlayout height="5-col" width="5-col">

				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>5-col-gutter</width>
					<height>5-col-gutter</height>						
					<aspectratio>scale</aspectratio>
					<texture border="6">$INFO[Listitem.icon]</texture>
					<bordertexture border="6">colors/white.png</bordertexture>
    			    <bordersize>6</bordersize>
				</control>
										
			</focusedlayout>
		</control>

	</include>

</includes>
