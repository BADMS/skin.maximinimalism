<window id="1">
	<defaultcontrol always="true">9999</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>

		<include>fadeInOut</include>

		<!--page container group-->
		<control type="group">
			
			<control type="group">			

				<control type="multiimage">
					<posx>0</posx>
	   				<posy>0</posy>
	   				<include>dimensionsFullscreen</include>
	   				<imagepath>$INFO[Skin.String(videoFanartLocation)]</imagepath>
					<timeperimage>30000</timeperimage>
					<fadetime>1000</fadetime>
					<pauseatend>10000</pauseatend>
					<randomize>true</randomize>
					<aspectratio>stretch</aspectratio>
					<colordiffuse>6affffff</colordiffuse>
					<animation effect="fade" start="0" end="100" time="600" delay="300">windowopen</animation>
					<animation effect="fade" start="100" end="50" time="300" delay="0">windowclose</animation>
				</control>

				<control type="image">
					<include>dimensionsFullscreen</include>
					<texture>backgrounds/vignette.png</texture>
					<colordiffuse>ffffffff</colordiffuse>
					<aspectratio>stretch</aspectratio>
				</control>

			</control>
			
			<!--content provider-->		
			<control type="group">

				<posx>0</posx>
				<posy>0</posy>

				<!--main menu-->
				<control type="group">

					<posx>col-1-begin</posx>
					<posy>row-2-begin</posy>

					<include>dateTime</include>
					
				</control>

				<!--Folder titles-->
				<control type="group">
					<posx>col-4-begin</posx>
					<posy>row-2-begin</posy>

					<!--animations-->
					<animation type="windowopen">
						<effect type="fade" start="0" end="100" time="600" reversible="false"  />
						<effect type="slide" start="300,0" end="0,0" tween="cubic" easing="out" time="400" />
					</animation>
					
					<!--source title-->
					<control type="label">
						<posx>0</posx>
						<posy>0</posy>
						<width>14-col</width>
						<font>pageTitle</font>
						<label>Programs</label>
						<textcolor>white</textcolor>
					</control>
			
					<!--source subtitle-->
					<control type="label">
						<posx>0</posx>
						<posy>45</posy>
						<width>24-col</width>
						<font>regular</font>
						<label>$INFO[container.Numitems,, Items]</label>
						<textcolor>white</textcolor>
					</control>

				</control>

				<!--Main content listing-->
				<control type="group" id="9999">
					<posx>col-4-begin</posx>
					<posy>row-2-begin</posy>

					<animation type="windowopen">
						<effect type="slide" start="1920" end="0" tween="cubic" easing="out" time="600" />
						<effect type="fade" start="0" delay="200" end="100" time="600" />
					</animation>
					
					<!--source content-->
					<control type="group">						
						<include>viewVideoList</include>
						<include>viewGridList</include>
					</control>
					
				</control>

				<!--page scrollbar-->
				<control type="group" id="8000">
					<visible>Control.IsVisible(60)</visible>
					
					<animation effect="fade" start="100" end="0" time="100" condition="!controlgroup(8000).hasfocus">conditional</animation>

					<control type="scrollbar" id="60">
						<posx>108r</posx>
						<posy>row-5-begin</posy>
						<height>12-row</height>
						<onleft>9999</onleft>
					</control>

				</control>

				<!--Sort / misc labels (footer)-->
				<control type="group">
					<posx>col-4-begin</posx>
					<posy>row-18-begin</posy>

					<control type="grouplist">
						<posx>0</posx>
						<posy>-24</posy>
						<width>24-col</width>
						<height>1-row</height>
						<itemgap>0</itemgap>
						<onleft>50</onleft>
						<onright>50</onright>
						<onup>9999</onup>
						<ondown>9999</ondown>
						<orientation>horizontal</orientation>

						<control type="label">
							<width min="30" max="200">auto</width>
							<font>symbol</font>
							<textcolor>white</textcolor>
							<label>ï„’</label>
						</control>

						<control type="label">
							<width>3-col</width>
							<font>buttonTitle</font>
							<textcolor>white</textcolor>
							<label>$LOCALIZE[31038] $INFO[container.currentpage] / $INFO[container.numpages]</label>
						</control>

					</control>
				</control>
			</control>
		</control>

		<!--debugging-->
		<include>Debug_Grid</include>
		<control type="label">
			<include>WindowID</include>
			<label>MyPrograms.xml</label>
		</control>

	</controls>

</window>