<includes>

	<include name="viewDialogList">
	
		<!--list-->		
		<control type="group">
			
			<control type="list" id="51">
				<posx>0</posx>
				<posy>0</posy>
				<width>14-col</width>
				<height>10-row</height>
				<onleft>9000</onleft>
				<onright>60</onright>
				<ondown>51</ondown>
				<onup>51</onup>
				<pagecontrol>60</pagecontrol>
				<focusposition>4</focusposition>
				<movement>4</movement>							

				<itemlayout height="1-row" width="12-col">
				
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>48</width>
						<height>48</height>						
						<aspectratio scalediffuse="false">scale</aspectratio>
						<texture fallback="colors/offblack.png" diffuse="masks/circle.png" border="0">$INFO[Listitem.icon]</texture>
					</control>

					<control type="label">
						<posx>60</posx>
						<posy>-6</posy>
						<width>8-col-gutter</width>
						<info>ListItem.Label</info>
						<font>itemTitle</font>
						<textcolor>unselected</textcolor>
					</control>
					
					<control type="label">
						<posx>12-col</posx>
						<posy>-6</posy>
						<width>4-col</width>
						<align>right</align>
						<info>ListItem.Label2</info>
						<font>itemTitle</font>
						<textcolor>unselected</textcolor>
					</control>
				
				</itemlayout>

				<focusedlayout height="1-row" width="12-col">

					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>48</width>
						<height>48</height>						
						<aspectratio scalediffuse="false">scale</aspectratio>
						<texture fallback="colors/offblack.png" diffuse="masks/circle.png" border="0">$INFO[Listitem.icon]</texture>
						<!--animation-->
						<include>listItemFocus</include>
					</control>
					
					<control type="label">
						<posx>60</posx>
						<posy>-6</posy>
						<width>8-col-gutter</width>
						<info>ListItem.Label</info>
						<font>itemTitle</font>
						<textcolor>selected</textcolor>
					</control>
					
					<control type="label">
						<posx>12-col</posx>
						<posy>-6</posy>
						<width>4-col</width>
						<align>right</align>
						<info>ListItem.Label2</info>
						<font>itemTitle</font>
						<textcolor>selected</textcolor>
					</control>
									
				</focusedlayout>
			</control>
		</control>

	</include>

</includes>
