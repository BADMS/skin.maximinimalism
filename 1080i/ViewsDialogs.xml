			<posy>0</posy>
			<width>20-col</width>
			<height>11-row</height>
			<onleft>9000</onleft>
			<onright>60</onright>
			<ondown>51</ondown>
			<onup>51</onup>
			<pagecontrol>60</pagecontrol>					

			<itemlayout height="1-row" width="10-col">
			
