<window id="129">
	<defaultcontrol always="true">9000</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<include>fadeInOut</include>

	<controls>
	
		<!--background-->
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<include>dimensionsFullscreen</include>
			<texture>colors/black.png</texture>
			<colordiffuse>ffffffff</colordiffuse>
			<aspectratio>stretch</aspectratio>
		</control>

		<control type="group">
			
			<posx>col-7-begin</posx>
			<posy>row-4-begin</posy>
			
			<!--animations-->
			<include>modalDialogInOut</include>
			
			<control type="label">
				<posx>0</posx>
				<posy>0</posy>
				<width>12-col</width>
				<font>pageTitle</font>
				<label>Add a new media source</label>
				<textcolor>white</textcolor>
			</control>
		
			<!--horizontal rule-->
			<control type="image">
				<posx>0</posx>
				<posy>1-row</posy>
				<width>12-col</width>
				<height>3</height>
				<texture>colors/white.png</texture>
				<colordiffuse>ffffffff</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>
			
			<!--source list-->
			<control type="label">
				<description>Name Label</description>
				<posx>0</posx>
				<posy>2-row</posy>
				<width>8-col</width>
				<font>smallStrong</font>
				<label>Source Path(s)</label>
			</control>
			
			
			<control type="list" id="10">
				<posx>0</posx>
				<posy>3-row</posy>
				<width>8-col</width>
				<height>3-row</height>
				<scrolltime>200</scrolltime>
				<itemlayout height="1-row">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>8-col</width>
						<height>1-row</height>
						<aspectratio>stretch</aspectratio>
						<texture>colors/keyboardLight.png</texture>
						<bordersize>0</bordersize>
						<colordiffuse>ffFFFFFF</colordiffuse>
					</control>
					<control type="label">
						<posx>24</posx>
						<posy>0</posy>
						<width>8-col</width>
						<font>regular</font>
						<textcolor>unselected</textcolor>
						<selectedcolor>selected</selectedcolor>
						<info>ListItem.Label</info>
					</control>
				</itemlayout>
				<focusedlayout height="1-row">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>8-col</width>
						<height>1-row</height>
						<aspectratio>stretch</aspectratio>
						<texture>colors/keyboardDark.png</texture>
						<bordersize>0</bordersize>
						<colordiffuse>ffFFFFFF</colordiffuse>
					</control>
					<control type="label">
						<posx>24</posx>
						<posy>0</posy>
						<width>8-col</width>
						<font>regular</font>
						<textcolor>selected</textcolor>
						<selectedcolor>selected</selectedcolor>
						<info>ListItem.Label</info>
					</control>
				</focusedlayout>
			</control>
		
			<!--controls-->
			<control type="grouplist" id="9000">
				<posx>10-col</posx>
				<posy>2-row</posy>
				<width>6-col</width>
				<height>6-row</height>
				<ondown>12</ondown>
				<itemgap>0</itemgap>
				<orientation>vertical</orientation>
							
				<control type="button" id="11">
					<description>Browse</description>
					<label>Locate folder</label>
					<font>smallStrong</font>
					<width>4-col</width>
					<textcolor>unselected</textcolor>
					<focusedcolor>selected</focusedcolor>
					<disabledcolor>disabled</disabledcolor>
				</control>
				
				<control type="button" id="13">
					<description>Add Path Button</description>
					<width>4-col</width>
					<label>15019</label>
					<font>smallStrong</font>
					<textcolor>unselected</textcolor>
					<focusedcolor>selected</focusedcolor>
					<disabledcolor>disabled</disabledcolor>
				</control>
				
				<control type="button" id="14">
					<description>Remove Path Button</description>
					<width>4-col</width>
					<label>1210</label>
					<font>smallStrong</font>
					<textcolor>unselected</textcolor>
					<focusedcolor>selected</focusedcolor>
					<disabledcolor>disabled</disabledcolor>
				</control>
											
				<control type="button" id="18">
					<description>OK</description>
					<label>186</label>
					<font>smallStrong</font>
					<width>4-col</width>
					<textcolor>unselected</textcolor>
					<focusedcolor>selected</focusedcolor>
					<disabledcolor>disabled</disabledcolor>					
				</control>
				
				<control type="button" id="19">
					<description>Cancel Button</description>
					<width>4-col</width>
					<label>222</label>
					<font>smallStrong</font>
					<textcolor>unselected</textcolor>
					<focusedcolor>selected</focusedcolor>
					<disabledcolor>disabled</disabledcolor>
				</control>
			</control>
			
			<!--path and media name-->
			<control type="group">
				
				<!--media source name-->
				<control type="label">
					<description>Name Label</description>
					<posx>0</posx>
					<posy>6-row</posy>
					<width>8-col</width>
					<font>smallStrong</font>
					<label>source title (select to edit)</label>
				</control>

				<control type="button" id="12">
					<description>Name</description>
					<posx>0</posx>
					<posy>7-row</posy>
					<label>-</label>
					<align>left</align>
					<onup>11</onup>
					<onleft>9000</onleft>
					<height>1-row</height>
					<width>8-col</width>
					<font>regular</font>
					<textoffsetx>24</textoffsetx>
					<textcolor>selected</textcolor>
					<focusedcolor>selected</focusedcolor>
					<texturefocus>colors/keyboardLight.png</texturefocus>
					<texturenofocus>colors/keyboardDark.png</texturenofocus>
				</control>
				
			</control>
					
		</control>

		<!--debugging-->
		<include>Debug_Grid</include>
		<control type="label">
			<include>DialogID</include>
			<label>DialogMediaSource.xml</label>
		</control>

	</controls>

</window>
