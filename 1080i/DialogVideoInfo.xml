<window id="2003">
	<defaultcontrol always="true">8000</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	
	<controls>
									
		<!--fanart / coverart-->
		<control type="group">
			<posx>0</posx>
			<posy>0</posy>
				
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<include>dimensionsFullscreen</include>
				<texture>colors/black.png</texture>
				<colordiffuse>ffffffff</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>
											
			<!--fanart-->
			<control type="image">
				<posx>col-9-begin</posx>
				<posy>0</posy>
				<include>dimensionsFullscreen</include>
				<aspectratio align="center" aligny="top">stretch</aspectratio>			
				<texture fallback="colors/black.png">$INFO[Listitem.art(fanart)]</texture>	
			</control>
			
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<include>dimensionsFullscreen</include>
				<texture>colors/black.png</texture>
				<colordiffuse>ccffffff</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>
			
			<!--cover-->
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>734</width>
				<height>1079</height>
				<texture fallback="colors/black.png">$INFO[Listitem.thumb]</texture>
				<colordiffuse>ffffffff</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>
						
			<!--vignette-->
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<include>dimensionsFullscreen</include>
				<texture>vignette.png</texture>
				<colordiffuse>ffffffff</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>
																					
		</control>
		
		<!--content-->
		<control type="group">
			<visible>true</visible>

			<posx>col-11-begin</posx>
			<posy>row-2-begin</posy>
			
			<control type="label">
				<posx>0</posx>
				<posy>0</posy>
				<width>13-col</width>
				<align>left</align>
				<font>dialogTitle</font>
				<textcolor>white</textcolor>
				<label>$INFO[ListItem.label]</label>
				<shadowcolor>-</shadowcolor>
			</control>
			
			<control type="label">
				<posx>0</posx>
				<posy>1-row</posy>
				<width>10-col</width>
				<align>left</align>
				<font>regularStrong</font>
				<textcolor>white</textcolor>
				<label>$INFO[ListItem.tagline]</label>
				<shadowcolor>-</shadowcolor>
			</control>
			
			<!--synopsis-->
			<control type="textbox">
				<posx>0</posx>
				<posy>3-row</posy>
				<font>small</font>
				<width>10-col</width>
				<align>justify</align>
				<textcolor>white</textcolor>
				<height>6-row</height>
				<label>$INFO[ListItem.plot]</label>
				<autoscroll delay="10000" time="1000" repeat="10000"></autoscroll>
			</control>
			
		</control>
		
		<!--dialog controls-->
		<control type="group">
			<visible>true</visible>
		
			<posx>col-10-begin</posx>
			<posy>row-13-begin</posy>
			
			<control type="image">
				<posx>-10</posx>
				<posy>-12</posy>
				<width>fullscreenWidth</width>
				<height>1-row</height>
				<texture>colors/white.png</texture>
				<colordiffuse>ffffffff</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>
			
			<control type="list" id="8000">
				<posx>col-1-begin</posx>
				<posy>-10</posy>
				<width>10-col</width>
				<height>1-row</height>
				<itemgap>0</itemgap>
				<orientation>horizontal</orientation>

				<itemlayout width="3-col" height="43">

					<control type="label">
						<posx>73</posx>
						<posy>0</posy>
						<width>3-col</width>
						<align>center</align>
						<font>menuTitle</font>
						<textcolor>black</textcolor>
						<label>$INFO[ListItem.label]</label>
						<shadowcolor>-</shadowcolor>
					</control>

				</itemlayout>

				<focusedlayout width="3-col" height="43">

					<control type="label">
						<posx>73</posx>
						<posy>0</posy>
						<width>3-col</width>
						<align>center</align>
						<font>menuTitle</font>
						<textcolor>black</textcolor>
						<label>[ $INFO[ListItem.label] ]</label>
						<shadowcolor>-</shadowcolor>
					</control>

				</focusedlayout>

				<content>
					<item id="1">
						<label>31075</label>
						<thumb>-</thumb>
						<onclick>sendclick(2003,8)</onclick>
					</item>
					<item id="2">
						<label>31076</label>
						<thumb>-</thumb>
						<onclick>SendClick(2003,6)</onclick>
					</item>
					<item id="3">
						<label>31077</label>
						<thumb>-</thumb>
						<onclick>SendClick(2003,10)</onclick>
					</item>
				</content>

			</control>
		</control>
			
		<!--buttons-->
		<control type="group">
			<visible>false</visible>
			
			<control type="button" id="8">
				<description>Play</description>
			</control>
			
			<control type="button" id="6">
				<description>Refresh</description>
			</control>

			<control type="button" id="10">
				<description>Choose Art</description>
			</control>
		</control>											
	
		<!--debugging-->
		<include>Debug_Grid</include>
		<control type="label">
			<include>DialogID</include>
			<label>DialogVideoInfo.xml</label>
		</control>

	</controls>

</window>