<window id="2003">
	<defaultcontrol always="true">8000</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	
	<controls>
		
		<!--further info available-->
		<control type="group">
			<visible>container.content(movies) | container.content(tvshows) | container.content(episodes)</visible>
			<include>globalBackground</include>
			<include>fadeInOut</include>
									
			<!--fanart / coverart if available-->
			<control type="group">
				<posx>0</posx>
				<posy>0</posy>
					
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<include>dimensionsFullscreen</include>
					<texture>colors/black.png</texture>
					<colordiffuse>ffffffff</colordiffuse>
					<aspectratio>stretch</aspectratio>
				</control>
												
				<!--fanart-->
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<include>dimensionsFullscreen</include>
					<aspectratio align="center" aligny="top">stretch</aspectratio>			
					<texture fallback="colors/black.png">$INFO[Listitem.art(fanart)]</texture>
					<include>kenBurnsey</include>	
				</control>
							
				<!--vignette-->
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<include>dimensionsFullscreen</include>
					<texture>vignette.png</texture>
					<colordiffuse>ffffffff</colordiffuse>
					<aspectratio>stretch</aspectratio>
				</control>
				
				<!--overlay-->
				<control type="image">
					<posx>0</posx>
					<posy>368</posy>
					<width>fullscreenWidth</width>
					<height>6-row</height>
					<texture>colors/black.png</texture>
					<colordiffuse>aaffffff</colordiffuse>
					<aspectratio>stretch</aspectratio>
					<!--animations-->
					<animation effect="slide" start="1920,0" end="0" delay="300" time="200">WindowOpen</animation>
				</control>
																		
			</control>
		
			<!--title info-->
			<control type="group">
				<posx>col-4-begin</posx>
				<posy>392</posy>
				
				<!--animations-->
				<animation effect="fade" start="0" end="100" delay="900" time="300">WindowOpen</animation>
												
				<!--content description-->
				<control type="label">
					<posx>0</posx>
					<posy>-12</posy>
					<width>18-col</width>
					<font>smallStrong</font>
					<textcolor>white</textcolor>
					<label>$INFO[ListItem.genre,, •] [B]$INFO[ListItem.year,,][/B] $INFO[ListItem.director,• ,]</label>
					<scroll>false</scroll>
				</control>
				
				<control type="label" id="20">
					<posx>0</posx>
					<posy>48</posy>
					<width>15-col-gutter</width>
					<font>largeStrong</font>
					<textcolor>white</textcolor>
					<label>[UPPERCASE]$INFO[ListItem.label][/UPPERCASE]</label>
					<scroll>false</scroll>
				</control>
				
				<control type="image">
					<posx>15-col</posx>
					<posy>0</posy>
					<width>3-col</width>
					<height>297</height>
					<aspectratio scalediffuse="false">scale</aspectratio>
					<texture fallback="colors/offblack.png" border="0">$INFO[Listitem.thumb]</texture>
				</control>
									
				<!--synopsis-->
				<control type="textbox">
					<posx>0</posx>
					<posy>2-row</posy>
					<font>small</font>
					<width>14-col</width>
					<align>justify</align>
					<textcolor>white</textcolor>
					<height>176</height>
					<label>$INFO[ListItem.plot]</label>
					<autoscroll delay="10000" time="1000" repeat="10000"></autoscroll>
				</control>
																		
			</control>
			
			<!--dialog controls-->
			<control type="group">
				<visible>true</visible>
			
				<posx>0</posx>
				<posy>row-13-begin</posy>
				
				<!--animations-->
				<animation effect="fade" start="0" end="100" delay="1200" time="300">WindowOpen</animation>
			
				<control type="image">
					<posx>0</posx>
					<posy>-12</posy>
					<width>fullscreenWidth</width>
					<height>1-row</height>
					<texture>colors/white.png</texture>
					<colordiffuse>ffffffff</colordiffuse>
					<aspectratio>stretch</aspectratio>
				</control>
				
				<control type="list" id="8000">
					<posx>col-4-begin</posx>
					<posy>-10</posy>
					<width>10-col</width>
					<height>1-row</height>
					<itemgap>0</itemgap>
					<orientation>horizontal</orientation>

					<itemlayout width="3-col" height="43">

						<control type="label">
							<posx>73</posx>
							<posy>0</posy>
							<width>3-col</width>
							<align>center</align>
							<font>menuTitle</font>
							<textcolor>black</textcolor>
							<label>$INFO[ListItem.label]</label>
							<shadowcolor>-</shadowcolor>
						</control>

					</itemlayout>

					<focusedlayout width="3-col" height="43">

						<control type="label">
							<posx>73</posx>
							<posy>0</posy>
							<width>3-col</width>
							<align>center</align>
							<font>menuTitle</font>
							<textcolor>black</textcolor>
							<label>[ $INFO[ListItem.label] ]</label>
							<shadowcolor>-</shadowcolor>
						</control>

					</focusedlayout>

					<content>
						<item id="1">
							<label>Play Title</label>
							<thumb>-</thumb>
							<onclick>sendclick(2003,8)</onclick>
						</item>
						<item id="2">
							<label>Change Title</label>
							<thumb>-</thumb>
							<onclick>SendClick(2003,6)</onclick>
						</item>
						<item id="3">
							<label>Choose Art</label>
							<thumb>-</thumb>
							<onclick>SendClick(2003,10)</onclick>
						</item>
					</content>

				</control>
			</control>
			
			<!--buttons-->
			<control type="group">
				<visible>false</visible>
				
				<control type="button" id="8">
					<description>Play</description>
				</control>
				
				<control type="button" id="6">
					<description>Refresh</description>
				</control>

				<control type="button" id="10">
					<description>Choose Art</description>
				</control>
			</control>
													
		</control>
	
		<!--debugging-->
		<include>Debug_Grid</include>
		<control type="label">
			<include>DialogID</include>
			<label>DialogVideoInfo.xml</label>
		</control>

	</controls>

</window>