<window id="2003">
	<defaultcontrol always="true">8000</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	
	<controls>
		
		<!--background / fanart-->
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<include>dimensionsFullscreen</include>
			<texture>colors/black.png</texture>
			<colordiffuse>ffffffff</colordiffuse>
			<aspectratio>stretch</aspectratio>
		</control>
		
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<include>dimensionsFullscreen</include>
			<texture>$INFO[listitem.art(fanart)]</texture>
			<colordiffuse>ffffffff</colordiffuse>
			<aspectratio>stretch</aspectratio>
			<include>kenBurnsey</include>
		</control>
		
		<control type="image">
			<include>dimensionsFullscreen</include>
			<texture>backgrounds/vignette.png</texture>
			<colordiffuse>ffffffff</colordiffuse>
			<aspectratio>stretch</aspectratio>
		</control>
		
		<control type="image">
			<posx>0</posx>
			<posy>710</posy>
			<width>fullscreenWidth</width>
			<height>7-row</height>
			<texture>colors/black.png</texture>
			<colordiffuse>ddffffff</colordiffuse>
			<aspectratio>stretch</aspectratio>
		</control>
									
		<!--fanart / coverart-->
		<control type="group">
			<posx>col-1-begin</posx>
			<posy>row-7-begin</posy>
															
			<!--cover-->			
			<control type="image">
				<posx>-24</posx>
				<posy>36</posy>
				<width>6-col</width>
				<height>635</height>
				<aspectratio scalediffuse="false">scale</aspectratio>
				<texture background="true" fallback="colors/black.png" diffuse="masks/poster.png" border="0">$INFO[Listitem.art(poster)]</texture>
				<fadetime>200</fadetime>
			</control>
																											
		</control>
		
		<!--content-->
		<control type="group">
			<visible>true</visible>

			<posx>col-7-begin</posx>
			<posy>row-13-begin</posy>
			
			<control type="label">
				<posx>0</posx>
				<posy>0</posy>
				<width>11-col</width>
				<align>left</align>
				<font>pageTitle</font>
				<textcolor>white</textcolor>
				<label>$INFO[ListItem.label]</label>
			</control>
			
			<control type="label">
				<posx>0</posx>
				<posy>1-row</posy>
				<width>18-col-gutter</width>
				<align>left</align>
				<font>small</font>
				<textcolor>white</textcolor>
				<label>[B][COLOR accented]$INFO[ListItem.year,,]$INFO[listitem.director, • Dir. ,]$INFO[listitem.genre, • ,][/COLOR][/B]</label>
			</control>
						
			<!--synopsis-->			
			<control type="textbox">
				<posx>0</posx>
				<posy>122</posy>
				<font>small</font>
				<width>18-col-gutter</width>
				<align>left</align>
				<textcolor>white</textcolor>
				<height>140</height>
				<label>[B]$INFO[ListItem.plot][/B]</label>
				<autoscroll delay="10000" time="1000" repeat="10000"></autoscroll>
			</control>
			
			<!--final details-->
			<control type="label">
				<posx>0</posx>
				<posy>273</posy>
				<width>18-col-gutter</width>
				<align>left</align>
				<font>small</font>
				<textcolor>white</textcolor>
				<label>[B][COLOR accented]$INFO[ListItem.duration,, mins]$VAR[itemResolution, • ]$INFO[listitem.filename, • ,][/COLOR][/B]</label>
			</control>
							
		</control>
		
		<!--dialog controls-->						
		<control type="list" id="8000">
			<posx>col-20-begin</posx>
			<posy>row-8-begin</posy>
			<width>8-col</width>
			<height>4-row</height>
			<itemgap>3</itemgap>
			<orientation>vertical</orientation>

			<itemlayout width="8-col" height="1-row">

				<control type="image">
					<posx>0</posx>
					<posy>2</posy>
					<width>8-col</width>
					<height>53</height>
					<aspectratio>stretch</aspectratio>
					<texture>colors/black.png</texture>
				</control>
				
				<control type="label">
					<posx>24</posx>
					<posy>0</posy>
					<width>1-col</width>
					<font>symbol</font>
					<textcolor>white</textcolor>
					<label>$INFO[ListItem.label2]</label>
					<shadowcolor>-</shadowcolor>
				</control>
				
				<control type="label">
					<posx>1-col</posx>
					<posy>2</posy>
					<width>6-col</width>
					<font>menuTitle</font>
					<textcolor>white</textcolor>
					<label>$INFO[ListItem.label]</label>
					<shadowcolor>-</shadowcolor>
				</control>

			</itemlayout>

			<focusedlayout width="8-col" height="1-row">
				
				<control type="image">
					<posx>0</posx>
					<posy>2</posy>
					<width>8-col</width>
					<height>53</height>
					<aspectratio>stretch</aspectratio>
					<texture>colors/white.png</texture>
				</control>
				
				<control type="label">
					<posx>24</posx>
					<posy>0</posy>
					<width>1-col</width>
					<font>symbol</font>
					<textcolor>black</textcolor>
					<label>$INFO[ListItem.label2]</label>
					<shadowcolor>-</shadowcolor>
				</control>

				<control type="label">
					<posx>1-col</posx>
					<posy>2</posy>
					<width>6-col</width>
					<font>menuTitle</font>
					<textcolor>black</textcolor>
					<label>$INFO[ListItem.label]</label>
					<shadowcolor>-</shadowcolor>
				</control>

			</focusedlayout>

			<content>
				<item id="1">
					<visible>!IsEmpty(ListItem.Trailer)</visible>
					<label>20410</label>
					<label2></label2>
					<thumb>-</thumb>
					<onclick>SendClick(2003,11)</onclick>
				</item>
				<item id="2">
					<label>31075</label>
					<label2></label2>
					<thumb>-</thumb>
					<onclick>sendclick(2003,8)</onclick>
				</item>
				<item id="3">
					<label>31076</label>
					<label2></label2>
					<thumb>-</thumb>
					<onclick>SendClick(2003,6)</onclick>
				</item>
				<item id="4">
					<label>31077</label>
					<label2></label2>
					<thumb>-</thumb>
					<onclick>SendClick(2003,10)</onclick>
				</item>
			</content>

		</control>
			
		<!--buttons-->
		<control type="group">
			<visible>false</visible>
			
			<control type="button" id="8">
				<description>Play</description>
			</control>
			
			<control type="button" id="6">
				<description>Refresh</description>
			</control>

			<control type="button" id="10">
				<description>Choose Art</description>
			</control>
			
			<control type="button" id="11">
				<description>Trailer</description>
			</control>
		</control>											
	
		<!--debugging-->
		<include>Debug_Grid</include>
		<control type="label">
			<include>DialogID</include>
			<label>DialogVideoInfo.xml</label>
		</control>

	</controls>

</window>