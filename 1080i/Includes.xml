<includes>

	<include file="Defaults.xml" />
	<include file="Includes_grid.xml" />
	<include file="Includes_variables.xml" />
	<include file="Includes_animations.xml" />
	<include file="Includes_animations.xml" />
	<include file="ViewsVideos.xml" />
	<include file="ViewsDialogs.xml" />
	<include file="ViewsPVR.xml" />
	<include file="ViewsMusic.xml" />
	<include file="ViewsPictures.xml" />
	
	<!--modal dialogs-->
	<include name="modalDialog">
							
		<control type="image">
			<include>dimensionsFullscreen</include>
			<texture>colors/black.png</texture>
			<colordiffuse>eeFFFFFF</colordiffuse>
			<aspectratio>stretch</aspectratio>
		</control>
		
		<control type="image">
			<include>dimensionsFullscreen</include>
			<texture>backgrounds/vignette.png</texture>
			<colordiffuse>ffffffff</colordiffuse>
			<aspectratio>stretch</aspectratio>
		</control>
				
	</include>
	
	<!--Global background-->
	<include name="globalBackground">
		
		<control type="group">
					
			<control type="image">
				<include>dimensionsFullscreen</include>
				<texture>colors/black.png</texture>
				<colordiffuse>ffFFFFFF</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>	
					
			<!--default background-->
			<control type="image">
				<visible>!Skin.HasSetting(useGlobalFanartBackground) + isempty(skin.string(globalBackground))</visible>
				<include>dimensionsFullscreen</include>
				<texture>backgrounds/defaultBackground.jpg</texture>
				<colordiffuse>6affffff</colordiffuse>
				<aspectratio>stretch</aspectratio>
				<animation effect="fade" start="0" end="100" time="1000" condition="window.previous(home)">windowopen</animation>	
			</control>
			
			<!--User setting: global background override-->
			<control type="image">
				<visible>!Skin.HasSetting(useGlobalFanartBackground) + !isempty(skin.string(globalBackground))</visible>
				<include>dimensionsFullscreen</include>
				<texture>$INFO[skin.string(globalBackground)]</texture>
				<colordiffuse>6Affffff</colordiffuse>
				<aspectratio>stretch</aspectratio>
				<animation effect="fade" start="0" end="100" time="1000" condition="window.previous(home)">windowopen</animation>	
			</control>
			
			<!--User setting: rolling fanart slides-->
			<control type="multiimage">
				<visible>Skin.HasSetting(useGlobalFanartBackground) + !container.content(seasons) + !container.content(songs) + [!container.content(episodes) | Substring(Container.folderpath,plugin)]</visible>
				<posx>0</posx>
   				<posy>0</posy>
   				<include>dimensionsFullscreen</include>
   				<imagepath>$VAR[fanartType]</imagepath>
				<timeperimage>25000</timeperimage>
				<fadetime>1000</fadetime>
				<pauseatend>10000</pauseatend>
				<randomize>true</randomize>
				<aspectratio>stretch</aspectratio>
				<colordiffuse>6affffff</colordiffuse>
				<animation type="windowopen">
		            <effect type="fade" start="0" end="100" time="500" delay="400"/>
				</animation>
				<animation type="windowclose">
		            <effect type="fade" start="100" end="0" time="300"/>
				</animation>		
			</control>
									
			<!--show media fanart in relevant sections-->			
			<control type="group">
				<visible>container.content(seasons) | container.content(songs) | [container.content(episodes) + !Substring(Container.folderpath,iplayer)]</visible>
				
				<animation type="visible" reversible="false">
		            <effect type="fade" start="0" end="100" time="500" delay="400"/>
				</animation>
				
				<control type="image">
					<include>dimensionsFullscreen</include>
					<texture>colors/black.png</texture>
					<colordiffuse>FFFFFFFF</colordiffuse>
					<aspectratio>stretch</aspectratio>
				</control>
				
				<control type="image">
					<include>dimensionsFullscreen</include>
					<texture>$INFO[listitem.art(fanart)]</texture>
					<colordiffuse>6affffff</colordiffuse>
					<aspectratio>stretch</aspectratio>
				</control>
			</control>
										
			<control type="image">
				<include>dimensionsFullscreen</include>
				<texture>backgrounds/vignette.png</texture>
				<colordiffuse>ffffffff</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>

		</control>
						
	</include>
	
	<!--date and time-->
	<include name="dateTime">
		
		<control type="group">
			<posx>0</posx>
			
			<control type="label">
				<posx>0</posx>
				<posy>0</posy>
				<width>24-col</width>
				<font>pageTitle</font>
				<label>$INFO[System.Time]</label>
				<textcolor>selected</textcolor>
			</control>

			<control type="label">
				<posx>0</posx>
				<posy>45</posy>
				<width>24-col</width>
				<font>regular</font>
				<label>$INFO[System.Date(mmm d)]</label>
				<textcolor>selected</textcolor>
			</control>
		</control>
		
	</include>
	
	<!--debugging-->
	<include name="DialogID">
		<posx>15</posx>
		<posy>15</posy>
		<width>fullscreenwidth</width>
		<height>1-row</height>
		<font>smallStrong</font>
		<textcolor>selected</textcolor>
		<align>left</align>
		<visible>!Skin.HasSetting(HideDebugInfo)</visible>
	</include>

	<include name="WindowID">
		<posx>15</posx>
		<posy>15</posy>
		<width>fullscreenwidth</width>
		<height>1-row</height>
		<font>smallStrong</font>
		<textcolor>selected</textcolor>
		<align>left</align>
		<visible>!Skin.HasSetting(HideDebugInfo)</visible>
	</include>

	<include name="Debug_Grid">
		<control type="image">
			<include>dimensionsFullscreen</include>
			<texture>debuggrid1080.png</texture>
			<colordiffuse>77FFFFFF</colordiffuse>
			<visible>Skin.HasSetting(DebugGrid)</visible>
		</control>
	</include>
	
	<!--hacky alignment for addons in myvideonav / mymusicnav-->	
	<include name="noOffset">
		<posy>366</posy>
	</include>
	
	<include name="offset1">
		<posy>410</posy>
	</include>
	
	<include name="offset2">
		<posy>454</posy>
	</include>
	
	<include name="offset3">
		<posy>496</posy>
	</include>
	
	<include name="offset4">
		<posy>538</posy>
	</include>
	
	<include name="offset5">
		<posy>582</posy>
	</include>
			
</includes>