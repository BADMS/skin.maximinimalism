<window id="2000">
	<defaultcontrol always="true">3</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<include>fadeInOut</include>

	<controls>
			
		<!--background-->
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<include>dimensionsFullscreen</include>
			<texture>colors/black.png</texture>
			<colordiffuse>ffffffff</colordiffuse>
			<aspectratio>stretch</aspectratio>
		</control>
					
		<control type="group">
			
			<!--animations-->
			<include>modalDialogInOut</include>
						
			<control type="group">
		
				<posx>col-9-begin</posx>
				<posy>row-1-begin</posy>
						
				<control type="label">
					<posx>0</posx>
					<posy>3-row</posy>
					<width>8-col</width>
					<font>pageTitle</font>
					<textcolor>white</textcolor>
					<label>File Browser</label>
				</control>
				
				<!--horizontal rule-->
				<control type="image">
					<posx>0</posx>
					<posy>4-row</posy>
					<width>8-col</width>
					<height>3</height>
					<texture>colors/white.png</texture>
					<colordiffuse>ffffffff</colordiffuse>
					<aspectratio>stretch</aspectratio>
				</control>
					
				<control type="list" id="3">
					<posx>0</posx>
					<posy>5-row</posy>
					<width>8-col</width>
					<height>8-row</height>
					<onleft>5</onleft>
					<onright>5</onright>
					<onup>3</onup>
					<ondown>3</ondown>

					<itemlayout height="1-row" width="8-col">

						<control type="label">
							<posx>0</posx>
							<width>8-col</width>
							<info>ListItem.Label</info>
							<font>regular</font>
							<textcolor>unselected</textcolor>
						</control>

					</itemlayout>

					<focusedlayout height="1-row" width="8-col">

						<control type="label">
							<posx>0</posx>
							<width>8-col</width>
							<info>ListItem.Label</info>
							<font>regular</font>
							<textcolor>selected</textcolor>
						</control>

					</focusedlayout>

				</control>
			</control>
		
			<!--addon selection etc-->
			<control type="group">
			
				<posx>col-9-begin</posx>
				<posy>row-1-begin</posy>
											
				<control type="list" id="6">
					<posx>0</posx>
					<posy>5-row</posy>
					<width>8-col</width>
					<height>10-row</height>
					<onleft>5</onleft>
					<onright>5</onright>
					<onup>6</onup>
					<ondown>6</ondown>

					<itemlayout height="1-row" width="8-col">
		
						<control type="image">
							<posx>0</posx>
							<posy>0</posy>
							<width>48</width>
							<height>48</height>
							<aspectratio scalediffuse="false">scale</aspectratio>
							<texture fallback="colors/offblack.png" diffuse="masks/circle.png" border="0">$INFO[Listitem.icon]</texture>
						</control>

						<control type="label">
							<posx>60</posx>
							<posy>-6</posy>
							<width>8-col-gutter</width>
							<info>ListItem.Label</info>
							<font>itemTitle</font>
							<textcolor>unselected</textcolor>
						</control>
		
					</itemlayout>

					<focusedlayout height="1-row" width="8-col">

						<control type="image">
							<posx>0</posx>
							<posy>0</posy>
							<width>48</width>
							<height>48</height>						
							<aspectratio scalediffuse="false">scale</aspectratio>
							<texture fallback="colors/offblack.png" diffuse="masks/circle.png" border="0">$INFO[Listitem.icon]</texture>
							<!--animation-->
							<include>listItemFocus</include>
						</control>

						<control type="label">
							<posx>60</posx>
							<posy>-6</posy>
							<width>8-col-gutter</width>
							<info>ListItem.Label</info>
							<font>itemTitle</font>
							<textcolor>selected</textcolor>
						</control>
							
					</focusedlayout>

				</control>
			</control>
		</control>

		<!--debugging-->
		<include>Debug_Grid</include>
		<control type="label">
			<include>DialogID</include>
			<label>DialogSelect.xml</label>
		</control>

	</controls>

</window>