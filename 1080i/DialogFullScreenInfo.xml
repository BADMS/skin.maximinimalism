<window type="dialog" id="142">
	<defaultcontrol always="true">8000</defaultcontrol>
	<include>fadeInOut</include>

	<controls>
						
		<control type="group">
												
			<!--background-->
			<control type="group">
				<posx>0</posx>
				<posy>0</posy>							
											
				<!--overlay-->
				<control type="image">
					<posx>col-13-begin</posx>
					<posy>0</posy>
					<width>13-col-gutter</width>
					<height>fullscreenHeight</height>
					<texture>colors/black.png</texture>
					<colordiffuse>AAffffff</colordiffuse>
					<aspectratio>stretch</aspectratio>
					<!--animations-->
					<animation effect="slide" start="500,0" delay="500" tween="back" easing="out" time="300">WindowOpen</animation>
				</control>
														
			</control>
		
			<!--title info-->
			<control type="group">	
		
				<posx>col-14-begin</posx>
				<posy>row-2-begin</posy>
				
				<!--animations-->
				<animation effect="fade" start="0" end="100" delay="900" time="300">WindowOpen</animation>
												
				<!--content description-->
				<control type="label">
					<posx>0</posx>
					<posy>0</posy>
					<width>11-col</width>
					<font>smallStrong</font>
					<textcolor>white</textcolor>
					<label>$INFO[videoplayer.genre]</label>
					<scroll>false</scroll>
				</control>
				
				<control type="textbox" id="20">
					<posx>0</posx>
					<posy>1-row</posy>
					<width>11-col</width>
					<height>135</height>
					<font>largeStrong</font>
					<textcolor>white</textcolor>
					<label>[UPPERCASE]$INFO[Videoplayer.title][/UPPERCASE]</label>
					<scroll>false</scroll>
				</control>
									
				<!--synopsis-->
				<control type="textbox">
					<posx>0</posx>
					<posy>4-row</posy>
					<font>regular</font>
					<width>11-col</width>
					<textcolor>white</textcolor>
					<height>295</height>
					<label>$INFO[videoplayer.plot]</label>
					<autoscroll delay="10000" time="1000" repeat="10000"></autoscroll>
				</control>
																						
			</control>
			
			<!--dialog controls-->
			<control type="group">
			
				<posx>col-14-begin</posx>
				<posy>row-18-begin</posy>
				
				<!--animations-->
				<animation effect="slide" start="0,100" time="200" delay="1100">WindowOpen</animation>
			
				<control type="image">
					<posx>-72</posx>
					<posy>-12</posy>
					<width>13-col-gutter</width>
					<height>1-row</height>
					<texture>colors/white.png</texture>
					<colordiffuse>ffffffff</colordiffuse>
					<aspectratio>stretch</aspectratio>
				</control>
				
				<control type="list" id="8000">
					<posx>0</posx>
					<posy>-10</posy>
					<width>10-col</width>
					<height>1-row</height>
					<itemgap>0</itemgap>
					<orientation>horizontal</orientation>

					<itemlayout width="150" height="43">

						<control type="label">
							<posx>55</posx>
							<posy>0</posy>
							<width>150</width>
							<align>center</align>
							<font>menuTitle</font>
							<textcolor>black</textcolor>
							<label>$INFO[ListItem.label]</label>
							<shadowcolor>-</shadowcolor>
						</control>

					</itemlayout>

					<focusedlayout width="150" height="43">

						<control type="label">
							<posx>55</posx>
							<posy>0</posy>
							<width>150</width>
							<align>center</align>
							<font>menuTitle</font>
							<textcolor>black</textcolor>
							<label>[ $INFO[ListItem.label] ]</label>
							<shadowcolor>-</shadowcolor>
						</control>

					</focusedlayout>

					<content>
						<item id="1">
							<label>Aspect</label>
							<thumb>-</thumb>
							<onclick>action(AspectRatio)</onclick>
						</item>
						<item id="2">
							<label>Audio</label>
							<thumb>-</thumb>
							<onclick>ActivateWindow(124)</onclick>
						</item>
						<item id="3">
							<label>Video</label>
							<thumb>-</thumb>
							<onclick>ActivateWindow(123)</onclick>
						</item>
						<item id="4">
							<label>Subtitles</label>
							<thumb>-</thumb>
							<onclick>Close</onclick>
							<onclick>XBMC.RunScript($INFO[Skin.String(SubtitlesPath)])</onclick>
						</item>
					</content>

				</control>
			</control>			
			
		</control>
				
		<!--debugging-->
		<include>Debug_Grid</include>
		<control type="label">
			<include>DialogID</include>
			<label>DialogFullscreenInfo.xml</label>
		</control>

	</controls>

</window>