<window type="dialog" id="142">
	<defaultcontrol always="true">8000</defaultcontrol>
	<include>fadeInOut</include>

	<controls>
						
		<control type="group">
			
			<!--animations-->
			<animation type="Windowopen">
				<effect type="fade" start="0" end="100" time="300" />
				<effect type="rotatex" start="90,0" end="0,0" center="540,0" tween="cubic" easing="out" time="400" />
			</animation>
			
			<animation type="Windowclose">
				<effect type="fade" start="100" end="0" time="300" />
				<effect type="rotatex" start="0,0" end="-90,0" center="540,0" tween="cubic" easing="out" time="400" />
			</animation>
			
			<control type="group">
												
				<!--background-->
				<control type="group">
					<posx>0</posx>
					<posy>0</posy>							
											
					<!--overlay-->
					<control type="image">
						<posx>-200</posx>
						<posy>368</posy>
						<width>2500</width>
						<height>6-row</height>
						<texture>colors/black.png</texture>
						<colordiffuse>aaffffff</colordiffuse>
						<aspectratio>stretch</aspectratio>
					</control>
														
				</control>
		
				<!--title info-->
				<control type="group">	
					<posx>col-4-begin</posx>
					<posy>392</posy>
															
					<!--content description-->
					<control type="label">
						<posx>0</posx>
						<posy>-12</posy>
						<width>18-col</width>
						<font>smallStrong</font>
						<textcolor>white</textcolor>
						<label>$INFO[videoplayer.genre]</label>
						<scroll>false</scroll>
					</control>
				
					<control type="label" id="20">
						<posx>0</posx>
						<posy>48</posy>
						<width>15-col-gutter</width>
						<font>largeStrong</font>
						<textcolor>white</textcolor>
						<label>[UPPERCASE]$INFO[Videoplayer.title][/UPPERCASE]</label>
						<scroll>false</scroll>
					</control>
				
					<control type="image">
						<posx>15-col</posx>
						<posy>0</posy>
						<width>3-col</width>
						<height>297</height>
						<aspectratio scalediffuse="false">scale</aspectratio>
						<texture fallback="colors/offblack.png" border="0">$INFO[videoplayer.cover]</texture>
					</control>
									
					<!--synopsis-->
					<control type="textbox">
						<posx>0</posx>
						<posy>2-row</posy>
						<font>small</font>
						<width>14-col</width>
						<align>justify</align>
						<textcolor>white</textcolor>
						<height>176</height>
						<label>$INFO[videoplayer.plot]</label>
						<autoscroll delay="10000" time="1000" repeat="10000"></autoscroll>
					</control>
																						
				</control>
			
				<!--dialog controls-->
				<control type="group">
			
					<posx>0</posx>
					<posy>row-13-begin</posy>
							
					<control type="image">
						<posx>-200</posx>
						<posy>-12</posy>
						<width>2500</width>
						<height>1-row</height>
						<texture>colors/white.png</texture>
						<colordiffuse>ffffffff</colordiffuse>
						<aspectratio>stretch</aspectratio>
					</control>
				
					<control type="list" id="8000">
						<posx>col-4-begin</posx>
						<posy>-10</posy>
						<width>10-col</width>
						<height>1-row</height>
						<itemgap>0</itemgap>
						<orientation>horizontal</orientation>

						<itemlayout width="150" height="43">

							<control type="label">
								<posx>55</posx>
								<posy>0</posy>
								<width>150</width>
								<align>center</align>
								<font>menuTitle</font>
								<textcolor>black</textcolor>
								<label>$INFO[ListItem.label]</label>
								<shadowcolor>-</shadowcolor>
							</control>

						</itemlayout>

						<focusedlayout width="150" height="43">

							<control type="label">
								<posx>55</posx>
								<posy>0</posy>
								<width>150</width>
								<align>center</align>
								<font>menuTitle</font>
								<textcolor>black</textcolor>
								<label>[ $INFO[ListItem.label] ]</label>
								<shadowcolor>-</shadowcolor>
							</control>

						</focusedlayout>

						<content>
							<item id="1">
								<label>Aspect</label>
								<thumb>-</thumb>
								<onclick>action(AspectRatio)</onclick>
							</item>
							<item id="2">
								<label>Audio</label>
								<thumb>-</thumb>
								<onclick>ActivateWindow(124)</onclick>
							</item>
							<item id="3">
								<label>Video</label>
								<thumb>-</thumb>
								<onclick>ActivateWindow(123)</onclick>
							</item>
							<item id="4">
								<label>Subtitles</label>
								<thumb>-</thumb>
								<onclick>Close</onclick>
								<onclick>XBMC.RunScript($INFO[Skin.String(SubtitlesPath)])</onclick>
							</item>
						</content>

					</control>
				</control>			
			
			</control>
		</control>
				
		<!--debugging-->
		<include>Debug_Grid</include>
		<control type="label">
			<include>DialogID</include>
			<label>DialogFullscreenInfo.xml</label>
		</control>

	</controls>

</window>