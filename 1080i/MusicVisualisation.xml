<window id="2006">
	<defaultcontrol always="true">-</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>

		<!--
		<control type="visualisation" id="2">
			<description>visualisation</description>
			<include>dimensionsFullscreen</include>
		</control>
	-->
		
		<!--fanart-->
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<include>dimensionsFullscreen</include>
			<fadetime>200</fadetime>
			<texture background="true">$INFO[MusicPlayer.Property(Fanart_Image)]</texture>
			<aspectratio  align="left" aligny="top">stretch</aspectratio>
			<include>kenBurnsey</include>
		</control>
		
		<!--vignette-->
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<include>dimensionsFullscreen</include>
			<texture>vignette.png</texture>
			<colordiffuse>ffffffff</colordiffuse>
			<aspectratio>stretch</aspectratio>
		</control>
		

		<control type="group">
			<posx>col-1-begin</posx>
			<posy>row-12-begin</posy>

			<control type="image">
				<description>Music cover image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>6-col-gutter</width>
				<height>6-col-gutter</height>
				<fadetime>200</fadetime>
				<texture background="true">$INFO[MusicPlayer.cover]</texture>
				<aspectratio  align="left" aligny="top">keep</aspectratio>
			</control>

			<control type="label">
				<posx>6-col</posx>
				<posy>46</posy>
				<width>8-col</width>
				<label>$INFO[MusicPlayer.Artist]</label>
				<align>left</align>
				<font>large</font>
			</control>

			<control type="label">
				<posx>6-col</posx>
				<posy>2-row</posy>
				<width>8-col</width>
				<label>$INFO[MusicPlayer.TrackNumber,,.] $INFO[MusicPlayer.Title]</label>
				<scroll>true</scroll>
				<align>left</align>
				<font>dialogTitle</font>
			</control>
			
			<control type="label">
				<posx>6-col</posx>
				<posy>3-row</posy>
				<width>8-col</width>
				<label>$INFO[MusicPlayer.Album] $INFO[MusicPlayer.year,â€¢ ,]</label>
				<align>left</align>
				<font>smallStrong</font>
			</control>

			<control type="label">
				<description>Player Times</description>
				<posx>6-col</posx>
				<posy>4-row</posy>
				<width>8-col</width>
				<label>$INFO[MusicPlayer.Time]$INFO[MusicPlayer.Duration, / ]</label>
				<font>small</font>
			</control>

			<control type="progress">
				<description>Progressbar</description>
				<posx>6-col</posx>
				<posy>5-row</posy>
				<width>8-col</width>
				<height>21</height>
				<info>Player.Progress</info>
			</control>

		</control>

		<!--debugging-->
		<include>Debug_Grid</include>
		<control type="label">
			<include>DialogID</include>
			<label>MusicVisualisation.xml</label>
		</control>

	</controls>

</window>