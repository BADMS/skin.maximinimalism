<window id="2006">
	<defaultcontrol always="true">-</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<onload>RunScript(script.artistslideshow)</onload>

	<controls>
		
		<!--fanart-->
		<control type="image">
			<visible>isempty(Window(Visualisation).Property(ArtistSlideshow))</visible>
			<posx>0</posx>
			<posy>0</posy>
			<include>dimensionsFullscreen</include>
			<fadetime>200</fadetime>
			<texture background="true">$INFO[MusicPlayer.Property(Fanart_Image)]</texture>
			<aspectratio  align="left" aligny="top">stretch</aspectratio>
			<include>kenBurnsey</include>
		</control>
	
		<control type="multiimage">
			<visible>!isempty(Window(Visualisation).Property(ArtistSlideshow))</visible>
		    <posx>0</posx>
		    <posy>0</posy>
		    <include>dimensionsFullscreen</include>
		    <imagepath background="true">$INFO[Window(Visualisation).Property(ArtistSlideshow)]</imagepath>
		    <aspectratio>keep</aspectratio>
		    <timeperimage>10000</timeperimage>
		    <fadetime>1000</fadetime>
		    <randomize>true</randomize>
			<include>kenBurnsey</include>
		</control>
		
		<!--vignette-->
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<include>dimensionsFullscreen</include>
			<texture>vignette.png</texture>
			<colordiffuse>ffffffff</colordiffuse>
			<aspectratio>stretch</aspectratio>
		</control>
		
		<control type="group">
			<posx>col-1-begin</posx>
			<posy>row-13-begin</posy>
			
			<!--overlay-->
			<control type="image">
				<posx>-96</posx>
				<posy>14</posy>
				<width>fullscreenWidth</width>
				<height>5-row</height>
				<texture>colors/black.png</texture>
				<colordiffuse>aaffffff</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>

			<control type="image">
				<description>Music cover image</description>
				<posx>0</posx>
				<posy>24</posy>
				<width>4-col-gutter</width>
				<height>4-col-gutter</height>
				<fadetime>200</fadetime>
				<texture background="true">$INFO[MusicPlayer.cover]</texture>
				<aspectratio  align="left" aligny="top">stretch</aspectratio>
			</control>

			<control type="label">
				<posx>4-col</posx>
				<posy>30</posy>
				<width>8-col</width>
				<label>$INFO[MusicPlayer.Artist]</label>
				<align>left</align>
				<font>medium</font>
			</control>

			<control type="label">
				<posx>4-col</posx>
				<posy>92</posy>
				<width>8-col</width>
				<label>$INFO[MusicPlayer.TrackNumber,,.] $INFO[MusicPlayer.Title]</label>
				<scroll>true</scroll>
				<align>left</align>
				<font>dialogTitle</font>
			</control>
			
			<control type="label">
				<posx>4-col</posx>
				<posy>3-row</posy>
				<width>8-col</width>
				<label>$INFO[MusicPlayer.Album] $INFO[MusicPlayer.year,â€¢ ,]</label>
				<align>left</align>
				<font>smallStrong</font>
			</control>

			<control type="label">
				<description>Player Times</description>
				<posx>4-col</posx>
				<posy>200</posy>
				<width>8-col</width>
				<label>[B]$INFO[MusicPlayer.Time]$INFO[MusicPlayer.Duration, / ][/B]</label>
				<font>smallStrong</font>
			</control>

			<control type="progress">
				<description>Progressbar</description>
				<posx>4-col</posx>
				<posy>248</posy>
				<width>8-col</width>
				<height>21</height>
				<info>Player.Progress</info>
			</control>

		</control>

		<!--debugging-->
		<include>Debug_Grid</include>
		<control type="label">
			<include>DialogID</include>
			<label>MusicVisualisation.xml</label>
		</control>

	</controls>

</window>