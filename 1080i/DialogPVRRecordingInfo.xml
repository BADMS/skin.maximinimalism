<window>
	<defaultcontrol always="true">10</defaultcontrol>
	<coordinates>
		<system>1</system>
		<posx>0</posx>
		<posy>0</posy>
	</coordinates>
	
	<controls>
				
		<!--background-->
		<control type="image">
			<include>dimensionsFullscreen</include>
			<texture>backgrounds/vignette.png</texture>
			<colordiffuse>ffffffff</colordiffuse>
			<aspectratio>stretch</aspectratio>
		</control>
		
		<control type="image">
			<include>dimensionsFullscreen</include>
			<texture>colors/black.png</texture>
			<colordiffuse>ddFFFFFF</colordiffuse>
			<aspectratio>stretch</aspectratio>
		</control>
		
		<control type="group">
			<posx>col-9-begin</posx>
			<posy>row-4-begin</posy>
			
			<include>modalDialogInOutVertical</include>
					
			<!--title-->
			<control type="label">
				<description>Programme title</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>8-col</width>
				<align>left</align>
				<font>regularStrong</font>
				<textcolor>white</textcolor>
				<label>$INFO[ListItem.Title]</label>
			</control>
		
			<!--channel / duration-->
			<control type="label">
				<description>Channel name</description>
				<posx>0</posx>
				<posy>1-row</posy>
				<width>8-col</width>
				<font>smallMedium</font>
				<label>[B]$INFO[ListItem.channelname][/B]</label>
			</control>
			
			<control type="label">
				<description>Date / start time / duration</description>
				<posx>0</posx>
				<posy>2-row</posy>
				<width>8-col</width>
				<font>smallMedium</font>
				<label>[B]$INFO[ListItem.startdate] @ $INFO[ListItem.starttime]          Duration $INFO[ListItem.duration][/B]</label>
			</control>
			
			<!--synopsis-->			
			<control type="textbox">
				<posx>0</posx>
				<posy>177</posy>
				<font>small</font>
				<width>8-col</width>
				<align>left</align>
				<textcolor>white</textcolor>
				<height>308</height>
				<label>[B]$INFO[ListItem.plot][/B]</label>
				<autoscroll delay="10000" time="1000" repeat="10000"></autoscroll>
			</control>
						
		</control>
	
		<!--debugging-->
		<include>Debug_Grid</include>
		<control type="label">
			<include>WindowID</include>
			<label>DialogPVRRecordingInfo.xml</label>
		</control>	
			
	</controls>
</window>