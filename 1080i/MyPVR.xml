<window>
	<defaultcontrol always="true">32</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<onload>PlayerControl(stop)</onload>
	<onunload>Skin.SetString(showRecentVideoItems,true)</onunload>
	
	<controls>
				
		<!--page container group-->
		<control type="group">
			
			<include>globalBackground</include>
			
			<!--window fader-->			
			<animation type="conditional" condition="window.next(0) | window.next(1)">
				<effect type="fade" start="100" end="0" time="300" />
			</animation>
			
			<!--shift page for certain modal dialogs-->
			<include>modalDialogContentShift</include>

			<!--content provider-->		
			<control type="group">

				<posx>0</posx>
				<posy>0</posy>
													
				<!--main menu-->
				<control type="group" id="8000">
					
					<posx>col-1-begin</posx>
					<posy>row-2-begin</posy>

					<include>dateTime</include>
																			
					<control type="grouplist" id="9000">
						<posx>0</posx>
						<posy>190</posy>
						<width>3-col</width>
						<height>10-row</height>
						<onleft>62</onleft>
						<onright>9999</onright>
						<onup>9000</onup>
						<ondown>9000</ondown>
						
						<control type="button" id="32">
							<description>TV Channels</description>
							<label>31011</label>
							<height>37</height>
							<font>menuTitle</font>
							<align>left</align>
							<focusedcolor>selected</focusedcolor>
							<textcolor>unselected</textcolor>
						</control>

						<control type="button" id="33">
							<visible>false</visible>
							<description>Radio Channels</description>
							<label>31016</label>
							<height>37</height>
							<font>menuTitle</font>
							<align>left</align>
							<focusedcolor>selected</focusedcolor>
							<textcolor>unselected</textcolor>
						</control>

						<control type="button" id="31">
							<description>TV Guide</description>
							<label>$LOCALIZE[19222]: $LOCALIZE[19030]</label>
							<height>37</height>
							<font>menuTitle</font>
							<align>left</align>
							<focusedcolor>selected</focusedcolor>
							<textcolor>unselected</textcolor>
						</control>

						<control type="button" id="34">
							<description>Recordings</description>
							<label>19163</label>
							<height>37</height>
							<font>menuTitle</font>
							<align>left</align>
							<focusedcolor>selected</focusedcolor>
							<textcolor>unselected</textcolor>
						</control>

						<control type="button" id="35">
							<description>Timers</description>
							<label>19040</label>
							<height>37</height>
							<font>menuTitle</font>
							<align>left</align>
							<focusedcolor>selected</focusedcolor>
							<textcolor>unselected</textcolor>
						</control>

					</control>						
				</control>

				<!--Folder titles-->
				<control type="group">
					<posx>col-4-begin</posx>
					<posy>row-2-begin</posy>
															
					<!--source title-->
					<control type="label">
						<posx>0</posx>
						<posy>0</posy>
						<width>14-col</width>
						<font>pageTitle</font>
						<label>$VAR[listTitle]</label>
						<textcolor>selected</textcolor>
					</control>

					<control type="label">
						<posx>0</posx>
						<posy>45</posy>
						<width>14-col</width>
						<font>regular</font>
						<label>$INFO[control.getlabel(30),, • ]$INFO[Pvr.BackendChannels] $LOCALIZE[31017]</label>
						<textcolor>selected</textcolor>
					</control>
					
					<control type="label" id="30">
						<description>Empty so we can pass the values up one level</description>
						<visible>False</visible>
					</control>
					
				</control>

				<!--Main content listing-->
				<control type="group" id="9999">
					<posx>col-4-begin</posx>
					<posy>270</posy>

					<!--animations-->
					<animation type="windowopen">
			            <include>listSlideIn</include>
					</animation>
					
					<include>EPGTimelineView</include> <!-- view id = 10 -->
					<include>LiveTVRadioChannelView</include> <!-- view id = 11 -->
					<include>LiveTVRecordingsView</include> <!-- view id = 13 -->
					<include>LiveTVTimersView</include> <!-- view id = 14 -->

				</control>
				
				<!--page scrollbar-->
				<control type="group" id="8000">
					<visible>Control.IsVisible(60)</visible>

					<control type="scrollbar" id="60">
						<posx>108r</posx>
						<posy>276</posy>
						<height>672</height>
						<onleft>9999</onleft>
					</control>

				</control>
				
				<!--Sort / misc labels (footer)-->
				<control type="group">
					<posx>col-4-begin</posx>
					<posy>row-18-begin</posy>
					
					<control type="grouplist">
						<posx>0</posx>
						<posy>-24</posy>
						<width>24-col</width>
						<height>1-row</height>
						<itemgap>0</itemgap>
						<onleft>50</onleft>
						<onright>50</onright>
						<onup>9999</onup>
						<ondown>9999</ondown>
						<orientation>horizontal</orientation>

						<control type="label">
							<width min="30" max="200">auto</width>
							<font>symbol</font>
							<textcolor>selected</textcolor>
							<label></label>
						</control>

						<control type="label">
							<width>3-col</width>
							<font>buttonTitle</font>
							<textcolor>selected</textcolor>
							<label>$LOCALIZE[31038] $INFO[container.currentpage] / $INFO[container.numpages]</label>
						</control>

						<!--debugging-->						
						<control type="label">
							<visible>false</visible>
							<width>8-col</width>
							<font>buttonTitle</font>
							<label>$INFO[container.folderpath]</label>
							<textcolor>selected</textcolor>
						</control>
						
					</control>
														
				</control>
			
			</control>
		</control>

		<!--sorting and misc controls-->
		<control type="group" id="61">

			<!--animations-->
			<animation type="Conditional" condition="!controlgroup(61).hasfocus">
				<effect type="fade" start="100" end="0" time="0" />
			</animation>

			<animation type="Conditional" condition="controlgroup(61).hasfocus">
				<effect type="fade" start="0" end="100" delay="200" time="300" />
			</animation>
			
			<animation type="conditional" condition="window.next(1)">
				<effect type="fade" start="100" end="0" time="300" />
			</animation>
			
			<!--background-->
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>col-5-begin</width>
				<height>fullscreenHeight</height>
				<aspectratio>stretch</aspectratio>
				<texture>colors/selected.png</texture>
				<bordersize>0</bordersize>
			</control>
						
			<!--titles-->
			<control type="group">
				<posx>col-1-begin</posx>
				<posy>row-2-begin</posy>
						
				<control type="label">
					<posx>0</posx>
					<posy>0</posy>
					<width>14-col</width>
					<font>pageTitle</font>
					<label>31078</label>
					<textcolor>black</textcolor>
					<shadowcolor>-</shadowcolor>
				</control>
				
				<control type="label">
					<posx>0</posx>
					<posy>45</posy>
					<width>24-col</width>
					<font>regular</font>
					<label>33063</label>
					<textcolor>black</textcolor>
					<shadowcolor>-</shadowcolor>
				</control>
			</control>
			
			<!--menu-->
			<control type="grouplist" id="62">
				<posx>82</posx>
				<posy>282</posy>
				<width>302</width>
				<height>10-row</height>
				<itemgap>0</itemgap>
				<onright>9000</onright>
				<ondown>63</ondown>
								
				<control type="button" id="36">
					<description>Search</description>
					<include>menuButtonInverted</include>
					<label>137</label>
				</control>
												
				<control type="button" id="103">
					<description>Programs menu</description>
					<include>menuButtonInverted</include>
					<label>31003</label>
					<onclick>ActivateWindow(programs,addons)</onclick>
				</control>
				
			</control>
				
		</control>
				
		<!--debugging-->
		<include>Debug_Grid</include>
		<control type="label">
			<include>DialogID</include>
			<label>MyPVR.xml</label>
		</control>

	</controls>
</window>
