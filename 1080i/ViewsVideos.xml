						<width>48</width>
						<height>48</height>
						<aspectratio scalediffuse="false">scale</aspectratio>
						<texture fallback="colors/offblack.png" diffuse="masks/circle.png" border="0">$INFO[Listitem.thumb]</texture>
					</control>
			
					<control type="label">
