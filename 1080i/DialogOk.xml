<window id="2002">
	<defaultcontrol always="true">10</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<include>fadeInOut</include>

	<controls>
			
		<include>modalDialog</include>
		
		<!--error message fields (placeholders)-->
		<control type="group">
			<visible>false</visible>
			
			<control type="label" id="2">
				<description>Line 1</description>
				<label>-</label>
			</control>

			<control type="label" id="3">
				<description>Line 2</description>
				<label>-</label>
			</control>
			
			<control type="label" id="4">
				<description>Line 3</description>
				<label>-</label>
			</control>
		</control>
		
		<control type="group">
			<posx>col-8-begin</posx>
			<posy>row-7-begin</posy>
			
			<!--animations-->
			<include>modalDialogInOut</include>
						
			<!--text-->
			<control type="label" id="1">
				<description>heading</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>10-col</width>
				<font>pageTitle</font>
				<textcolor>white</textcolor>
			</control>

			<control type="textbox">
				<posx>0</posx>
				<posy>1-row</posy>
				<width>10-col</width>
				<height>128</height>
				<font>regular</font>
				<textcolor>white</textcolor>
				<label>$INFO[control.getlabel(2)] $INFO[control.getlabel(3)] $INFO[control.getlabel(4)]</label>
			</control>
			
			<control type="button" id="10">
				<font>buttonTitle</font>
				<posx>0</posx>
				<posy>4-row</posy>
				<width>4-col-gutter</width>	
				<aligny>top</aligny>
				<textoffsety>12</textoffsety>
				<align>center</align>
				<texturenofocus>UIControls/buttonFO.png</texturenofocus>
				<texturefocus>UIControls/buttonFO.png</texturefocus>
				<textcolor>white</textcolor>
				<focusedcolor>black</focusedcolor>
			</control>
		</control>

		<!--debugging-->
		<include>Debug_Grid</include>
		<control type="label">
			<include>DialogID</include>
			<label>DialogOk.xml</label>
		</control>

	</controls>

</window>